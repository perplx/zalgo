# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# all files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# configuration files
[*.{cfg,toml}]
indent_size = 2
indent_style = space

# makefiles
[Makefile]
indent_style = tab
tab_width = 4

# markdown files
[*.md]
indent_size = 4
indent_style = space

# python files
[*.py]
indent_size = 4
indent_style = space

# shell files
[*.sh]
indent_size = 4
indent_style = space

# yaml files
[*.{yaml,yml}]
indent_size = 2
indent_style = space
